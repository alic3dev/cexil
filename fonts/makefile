PROJECT_NAME=library

INCLUDE_DIRECTORY=include
OBJECTS_DIRECTORY=objects
SOURCES_DIRECTORY=sources

OUT_FILE=$(OBJECTS_DIRECTORY)/$(PROJECT_NAME).o

SOURCE_FILES=$(wildcard $(SOURCES_DIRECTORY)/*.c)
OBJECT_FILES=$(patsubst $(SOURCES_DIRECTORY)/%.c, $(OBJECTS_DIRECTORY)/%.o, $(SOURCE_FILES))

CEXIL_DIRECTORY=..
CEXIL_INCLUDE_DIRECTORY=$(CEXIL_DIRECTORY)/include
CEXIL_OBJECTS_DIRECTORY=$(CEXIL_DIRECTORY)/objects

CEXIL_OBJECT_FILES=$(wildcard $(CEXIL_OBJECTS_DIRECTORY)/objects/*.o)

CC=gcc
C_FLAGS=-O3 -I$(INCLUDE_DIRECTORY) -I$(CEXIL_INCLUDE_DIRECTORY)
LD=ld
LD_FLAGS=

$(OUT_FILE): $(OBJECT_FILES) $(CEXIL_OBJECT_FILES)
	$(LD) $(LD_FLAGS) -r $^ -o $@

$(OBJECTS_DIRECTORY)/%.o: $(SOURCES_DIRECTORY)/%.c
	$(CC) $(C_FLAGS) -c $< -o $@

clean:
	-rm $(OUT_FILE) $(OBJECTS_DIRECTORY)/*.o 2> /dev/null

